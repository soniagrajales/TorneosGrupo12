@page
@model Frontend.Pages.CTorneo.DeleteModel
@{
       ViewData["Title"]="Delete";
}

<h1>Eliminar Torneo</h1>
<h2 class="text-danger">@ViewData["Confirmar"] </h2>
<div class="form-horizontal">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="Torneo.Id" />
                <div class="form-group">
                    <label asp-for="Torneo.Nombre" class="control-label" > </label>
                    <input asp-for="Torneo.Nombre" class="form-control" readonly/>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.Categoria" class="control-label" > </label>
                    <input asp-for="Torneo.Categoria" class="form-control" readonly/>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.FechaInicial" class="control-label" > </label>
                    <input asp-for="Torneo.FechaInicial" class="form-control" readonly/>                       
                   
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.FechaFinal" class="control-label" > </label>
                    <input asp-for="Torneo.FechaFinal" class="form-control" readonly/>    
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.Horario" class="control-label" > </label>
                    <input asp-for="Torneo.Horario" class="form-control" readonly/>    
                </div>

                <div class="form-group">
                    <label class="control-label" >Municipio</label>
                    <input asp-for="Municipio.Nombre" class="form-control" readonly/>     
                </div>

                <div  class="form-group">
                    <input type="submit" value="Eliminar" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="Index">Ir al Inicio</a>
    </div>
</div>

