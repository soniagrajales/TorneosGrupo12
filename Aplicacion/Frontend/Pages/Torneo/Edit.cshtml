@page
@model Frontend.Pages.CTorneo.EditModel
@{
        ViewData["Title"]="Edit";
}
<h1>Editar Torneo</h1>
<h2 class="text-danger">@ViewData["Error"] </h2>
<div class="form-horizontal">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="Torneo.Id" />
                <div class="form-group">
                    <label asp-for="Torneo.Nombre" class="control-label" > </label>
                    <input asp-for="Torneo.Nombre" class="form-control" readonly/>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.Categoria" class="control-label" > </label>
                    <input asp-for="Torneo.Categoria" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.FechaInicial" class="control-label" > </label>
                    <input asp-for="Torneo.FechaInicial" class="form-control" />                       
                   
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.FechaFinal" class="control-label" > </label>
                    <input asp-for="Torneo.FechaFinal" class="form-control" />    
                </div>

                <div class="form-group">
                     <label asp-for="Torneo.Horario" class="control-label" > </label>
                    <input asp-for="Torneo.Horario" class="form-control" />    
                </div>

                <div class="form-group">
                    <label class="control-label" >Municipio</label>
                    <select asp-for="Torneo.MunicipioId" class="form-control" >
                        <option value="">-- Seleccione un municipio --</option>
                        @foreach (var muni in Model.Municipios)
                        {
                            <option value="@muni.Id"> @muni.Nombre</option>                                                        
                        }
                    </select>    
                </div>

                <div  class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="Index">Ir al Inicio</a>
    </div>
</div>
