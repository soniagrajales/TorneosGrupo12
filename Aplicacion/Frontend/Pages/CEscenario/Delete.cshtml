@page
@model Frontend.Pages.CEscenario.DeleteModel
@{
    ViewData["Title"]= "Delete";
}

<h1>Eliminar Escenario </h1>
<h2 class="text-danger">@ViewData["Mensaje"]</h2>
<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Escenario.Id" />

                <div class="form-group">
                    <label asp-for="Escenario.Nombre" class="control-label"></label>
                    <input asp-for="Escenario.Nombre" class="form-control" readonly>
                    <span asp-validation-for="Escenario.Nombre" class="text-danger"></span> 
                </div>

                <div class="form-group">
                    <label asp-for="Escenario.Direcion" class="control-label"></label>
                    <input asp-for="Escenario.Direcion" class="form-control" readonly>
                     <span asp-validation-for="Escenario.Direcion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Escenario.Telefono" class="control-label"></label>
                    <input asp-for="Escenario.Telefono" class="form-control" readonly>
                     <span asp-validation-for="Escenario.Telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.Nombre" class="control-label"></label>
                    <input asp-for="Torneo.Nombre" class="form-control" readonly/>                                            
                </div>
                <div class="form-group"> 
                  <button type="submit" class="btn btn-primary">Eliminar</button>
                </div>                
               
            </form>               
        </div>
    </div>

    <div>
        <a asp-page="Index"> Back to List</a>
    </div> 
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
