@page
@model Frontend.Pages.CPatrocinador.CreateModel
@{
    ViewData["Title"]="Create";
}

<h1>Crear Patrocinador</h1>
<h2>@ViewData["Mensaje"]</h2>

<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                <div class="form-group">
                    <label asp-for="Patrocinador.Identificacion" class="control-label" > </label>
                    <input asp-for="Patrocinador.Identificacion" class="form-control" />
                    <span asp-validation-for="Patrocinador.Identificacion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patrocinador.Nombre" class="control-label" > </label>
                    <input asp-for="Patrocinador.Nombre" class="form-control" />
                    <span asp-validation-for="Patrocinador.Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patrocinador.TipoPersona" class="control-label" > </label>
                    <select asp-for="Patrocinador.TipoPersona" class="form-control" >
                        <option value="">--- Seleccione ---</option>
                        <option value="Natural">Natural</option>
                        <option value="Juridica">Jurídica</option>
                        <option value="Otra">Otra</option>
                    </select>
                    <span asp-validation-for="Patrocinador.TipoPersona" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patrocinador.Direccion" class="control-label" > </label>
                    <input asp-for="Patrocinador.Direccion" class="form-control" />
                    <span asp-validation-for="Patrocinador.Direccion" class="text-danger"></span> 
                </div>

                <div class="form-group">
                    <label asp-for="Patrocinador.Celular" class="control-label" > </label>
                    <input asp-for="Patrocinador.Celular" class="form-control" />
                    <span asp-validation-for="Patrocinador.Celular" class="text-danger"></span>
                </div>

                <div class="form-group"> 
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="Index">Ir al Inicio</a>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
