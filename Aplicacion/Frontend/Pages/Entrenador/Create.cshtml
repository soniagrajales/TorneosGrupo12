@page
@model Frontend.Pages.CEntrenador.CreateModel
@{
    ViewData["Title"]="Create";
}

<h1>Crear Entrenador</h1>
<h2 class="text-danger">@ViewData["Error"]</h2>

<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div> </div>
                <div class="form-group">
                    <label asp-for="Entrenador.Documento" class="control-label" > </label>
                    <input asp-for="Entrenador.Documento" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Nombres" class="control-label" > </label>
                    <input asp-for="Entrenador.Nombres" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Apellidos" class="control-label" > </label>
                    <input asp-for="Entrenador.Apellidos" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Entrenador.Genero" class="control-label" > </label>
                    <select asp-for="Entrenador.Genero" class="form-control" >
                        <option value="">--- Seleccione ---</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="control-label" >Equipo</label>
                    <select asp-for="Entrenador.EquipoId" class="form-control" >
                        <option value="">-- Seleccione un equipo --</option>
                        @foreach (var eq in Model.Equipos)
                        {
                            <option value="@eq.Id"> @eq.Nombre</option>                                                        
                        }
                    </select>    
                </div>

                <div class="form-group"> 
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="Index">Ir al Inicio</a>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}