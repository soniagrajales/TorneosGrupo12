@page
@model Frontend.Pages.CCancha.EditModel
@{
    ViewData["Title"]="Edit";
}

<h1>Editar Cancha</h1>

<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                <input type="hidden" asp-for="Cancha.Id" />
                <div class="form-group">
                    <label asp-for="Cancha.Nombre" class="control-label" > </label>
                    <input asp-for="Cancha.Nombre" class="form-control" readonly />
                    <span asp-validation-for="Cancha.Nombre" class="text-danger"> </span>
                </div>

                <div class="form-group">
                    <label asp-for="Cancha.Disciplina" class="control-label" > </label>
                    <input asp-for="Cancha.Disciplina" class="form-control" />
                    <span asp-validation-for="Cancha.Disciplina" class="text-danger"> </span>
                </div>

                <div class="form-group">
                    <label asp-for="Cancha.CapacidadEsp" class="control-label" > </label>
                    <input asp-for="Cancha.CapacidadEsp" class="form-control" />                       
                   
                </div>
                
                <div class="form-group">
                    <label asp-for="Cancha.EscenarioId" class="control-label" >Escenario</label>
                    <select asp-for="Cancha.EscenarioId" class="form-control" >
                        <option value="">-- Seleccione un escenario --</option>
                        @foreach (var tor in Model.Escenarios)
                        {
                            <option value="@tor.Id"> @tor.Nombre</option>                                                        
                        }
                    </select>    
                </div>

                <div class="form-group"> 
                    <input type="submit" value="Editar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="Index">Ir al Inicio</a>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

